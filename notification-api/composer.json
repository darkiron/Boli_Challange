{
  "name": "health/notification-api",
  "description": "Service Symfony pour la gestion des notifications push (DDD + CQRS)",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "symfony/framework-bundle": "^7.1",
    "symfony/runtime": "^7.1",
    "symfony/monolog-bundle": "^3.10",
    "symfony/messenger": "^7.1",
    "symfony/http-client": "^7.1",
    "symfony/cache": "^7.1",
    "symfony/uid": "^7.1",
    "doctrine/mongodb-odm-bundle": "^5.0",
    "symfony/yaml": "^8.0",
    "symfony/serializer-pack": "^1.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "symfony/phpunit-bridge": "^7.1"
  },
  "autoload": {
    "psr-4": {
      "NotificationApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "NotificationApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php bin/console cache:clear --no-warmup || true"
    ]
  },
  "extra": {
    "symfony": {
      "allow-contrib": true,
      "require": "7.1.*"
    }
  },
  "config": {
    "allow-plugins": {
      "symfony/runtime": true
    }
  }
}
